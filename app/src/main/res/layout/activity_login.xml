<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cover" />

    <ImageView
        android:scaleType="fitXY"
        android:translationZ="10dp"
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        app:srcCompat="@drawable/rectangle_1_copy" />

    <ImageView
        android:translationZ="20dp"
        android:id="@+id/logo"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        app:srcCompat="@drawable/group_1" />

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="350dp"
        android:textSize="16dp"
        android:text="Welcome back"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>

    <TextView
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="370dp"
        android:textSize="25dp"
        android:text="Let's go for work"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    
    
    <EditText
        android:maxLines="1"
        android:textSize="22dp"
        android:hint="  user name"
        android:padding="10dp"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/layer_4"
        android:background="@drawable/rounded_rectangle_1_copy_2"
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="60dp"></EditText>



    <EditText
        android:maxLines="1"
        android:textSize="22dp"
        android:hint="  password"
        android:padding="10dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/layer_2"
        android:background="@drawable/rounded_rectangle_1_copy_2"
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="60dp"></EditText>



    <Button
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="600dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rectangle_2"
        android:id="@+id/login"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Login" />

</RelativeLayout>